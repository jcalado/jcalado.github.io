---
interface Props {
  appId: string
  width?: number
  alt?: string
}

const { appId, width = 200, alt = 'Get it on Google Play' } = Astro.props
const playStoreUrl = `https://play.google.com/store/apps/details?id=${appId}`
const badgeUrl = 'https://play.google.com/intl/en_us/badges/static/images/badges/en_badge_web_generic.png'
---

<a
  href={playStoreUrl}
  target="_blank"
  rel="noopener noreferrer"
  class="google-play-button inline-block transition-transform hover:scale-105"
  aria-label={alt}
>
  <img
    src={badgeUrl}
    alt={alt}
    width={width}
    height={width * 0.3}
    class="google-play-badge"
  />
</a>

<style>
  .google-play-button {
    display: inline-block;
  }

  .google-play-badge {
    display: block;
  }
</style>
